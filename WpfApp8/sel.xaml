<Page x:Class="WpfApp8.sel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp8"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="sel">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Click="A_Click" Grid.Row="1" Content="Я участвовал ранее" Width="200" Height="60"/>
        <Button Click="B_Click" Grid.Row="2" Content="Я новый участник" Width="200" Height="60"/>
        <Button Click="A_Click" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Content="Login"  Width="90" Height="40"/>
    </Grid>
</Page>
