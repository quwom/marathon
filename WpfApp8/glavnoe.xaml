<Page x:Class="WpfApp8.glavnoe"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp8"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="glavnoe">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Width="260" TextWrapping="Wrap" FontSize="25" Text="Москва, Россия среда 21 октября 2016"/>
        <Button Click="a_Click" Grid.Row="1" Content="Я хочу стать бегуном" Width="200" Height="60"/>
        <Button Grid.Row="2" Content="Я хочу стать спонсором бегуна" Width="200" Height="60"/>
        <Button Grid.Row="3" Content="Я хочу узнать больше о событии"  Width="200" Height="60"/>
        <Button Click="Lo_Click" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Content="Login"  Width="90" Height="40"/>
    </Grid>
</Page>
